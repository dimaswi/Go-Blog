# ============================================================
# COPY this file to .env and fill in your values
#   cp .env.example .env
# ============================================================

# Database
DB_USER=dimas
DB_PASSWORD=ganti_password_aman
DB_NAME=goblog

# Backend  generate dengan: openssl rand -hex 32
JWT_SECRET=ganti_dengan_random_string_panjang_dan_aman

# Domains/IP yang boleh akses API (pisah koma, TANPA spasi)
# Ganti IP_VPS dengan IP publik VPS kamu
ALLOWED_ORIGINS=http://IP_VPS:2220,http://IP_VPS:2221

# Frontend Admin (React)  nginx proxy /api ke backend internal, biarkan /api
VITE_API_URL=/api

# Blog (Next.js)  URL internal Docker untuk SSR, jangan diubah
NEXT_PUBLIC_API_URL=http://backend:8080/api

# URL PUBLIK untuk gambar (diakses browser)  ganti IP_VPS
NEXT_PUBLIC_UPLOAD_URL=http://IP_VPS:2222

# Cloudflare Tunnel  kosongkan jika tidak pakai
CLOUDFLARE_TUNNEL_TOKEN=
